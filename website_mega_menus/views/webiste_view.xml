        <record id="website_menu_form_view" model="ir.ui.view">
            <field name="name">website.menu.form</field>
            <field name="model">website.menu</field>
            <field name="inherit_id" ref="website.website_menus_form_view"/>
            <field name="arch" type="xml">
                <field name="child_id" position="attributes">
                     <attribute name="attrs">{'invisible':[('is_wk_mega_menu', '=', True)]}</attribute>
                </field>
                <field name="page_id" position="attributes">
                     <attribute name="attrs">{'invisible':[('is_wk_mega_menu', '=', True)]}</attribute>
                </field>
                <xpath expr="//form/sheet/label" position="attributes">
                    <attribute name="attrs">{'invisible':[('is_wk_mega_menu', '=', True)]}</attribute>
                </xpath>
                <field name="child_id" position="attributes">
                    <attribute name="attrs">{'invisible':[('is_wk_mega_menu', '=', True)]}</attribute>
                </field>
                <field name="url" position="after">
                    <field name="is_wk_mega_menu"/>
                </field>
                <field name="is_mega_menu" position="attributes">
                   <attribute name="attrs">{'invisible':[('is_wk_mega_menu', '=', True)],'readonly':True}</attribute>
                </field>
                <xpath expr="//form/sheet/group[1]" position="after">
                    <group col="4">
                            <!-- <field name="website_id" options="{'no_create': True}"/> -->
                            <label for="root_category" string="Root Category" attrs="{'invisible':[('is_wk_mega_menu','=',False)]}"/>
                            <div attrs="{'invisible':[('is_wk_mega_menu','=',False)]}">
                                <field name="root_category" class="oe_inline"/>
                                <button string="Create Top Menu URL" name="create_url" type="object" class="oe_inline oe_highlight oe_edit_only" attrs="{'invisible':[('root_category','=',False)]}"/>
                            </div>

                            <field name="categories_displayed" attrs="{'invisible':[('is_wk_mega_menu','=',False)]}"/>
                        </group>
                        <group attrs="{'invisible':[('categories_displayed','!=','selected')]}">
                            <field name="selected_categories" nolabel="1" attrs="{'required':[('categories_displayed','=','selected')]}" widget="many2many_tags" domain="[('parent_id','=',root_category)]"/>
                        </group>
                        <group string="Images and Icons" col="4" attrs="{'invisible':[('is_wk_mega_menu','=',False)]}">
                           <field name="bg_image" options='{"size": [300, 700]}' widget="image" attrs="{'required':[('categories_displayed','=','selected')]}"/>
                           <field name="top_menu_icon"  widget="image" options='{"size": [50, 50]}'/>
                        </group>
                </xpath>
            </field>
        </record>

        <record id="mega_menu_tree" model="ir.ui.view">
            <field name="name">website.menu.tree</field>
            <field name="model">website.menu</field>
            <field name="field_parent">Electronicschild_id</field>
            <field name="arch" type="xml">
                <tree string="Website menu">
                    <field name="sequence" widget="handle"/>
                    <field name="website_id" options="{'no_create': True}"/>
                    <field name="name"/>
                    <field name="url"/>
                    <field name="new_window"/>
                    <field name="parent_id"/>
                    <field name="is_wk_mega_menu"/>
                    <field name="root_category" attrs="{'invisible':[('is_wk_mega_menu','=',False)]}" domain="[('child_id','!=',False)]"/>
                    <field name="categories_displayed" attrs="{'invisible':[('is_wk_mega_menu','=',False)]}"/>
                    <field name="selected_categories" attrs="{'required':[('categories_displayed','=','selected')],'invisible':[('is_wk_mega_menu','=',False)]}" widget="many2many_tags" domain="[('parent_id','=',root_category)]"/>
                </tree>
            </field>
        </record>

        <record id="action_website_mega_menus_id" model="ir.actions.act_window">
            <field name="name">Website Menu</field>
            <field name="res_model">website.menu</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('is_wk_mega_menu', '=', True)]</field>
            <field name="context">{'default_is_wk_mega_menu':True}</field>
            <!-- <field name="view_id" ref="mega_menu_tree"/> -->
            <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('mega_menu_tree')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('website_menu_form_view')}),
            ]"/>


        </record>

